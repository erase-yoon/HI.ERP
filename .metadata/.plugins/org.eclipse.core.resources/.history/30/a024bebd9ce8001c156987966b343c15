// MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM
// 아래 클래스의 소속 패키지를 선언.
// 모든  클래스의 최 상단에는 무조건 패키지 선언이 등장한다.
// MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM
package com.daum.test;

// MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM
// Test_03 이라는 클래스 선언.
// 자바는 클래스(class) 또는 인터페이스(interface)라는 최소 단위 프로그램들로 구성된다.
// 클래스 이름은 관용적으로 대문자로 시작한다.
// 클래스 이름은 의미 있게 주어야한다.(=가독성)
// MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM
public class Test_04_loop {

	//mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm
	// 자바 가상머신(JVM)이 찾아서 호출하는 main 메소드 선언.
	// main 메소드에 붙어 있는 public static void 의 키워드는 나중에
	// 배울테니 당분간 main 메소드 안의 코딩에 집중하자.
	//mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm
	public static void main(String[] args) {
		
		//************************************************
		// 무식한 방법으로 "사오정"이란 문자 데이터를 10번 출력하기
		//************************************************
		System.out.println("---------------------------------------------");
		System.out.println("\"사오정\"이란 문자 데이터를 10번 출력하기");
		System.out.println("---------------------------------------------");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");
		System.out.println("사오정");

		//************************************************
		// for문을 사용하여 "손오공"이란 문자 데이터를 10번 출력하기
		//************************************************
		System.out.println("---------------------------------------------");
		System.out.println( "for문을 사용하여 \"손오공\"이란 문자 데이터를 10번 출력하기"  );
		System.out.println("---------------------------------------------");
		for(int i=0; i<10; i++) {
			System.out.println("손오공");
		}
		System.out.println("---------------------------------------------");
		
		//************************************************
		// 무식한 방법으로 1부터 5까지 더한 결과를 출력하기
		//************************************************
		int tot = 0;
		tot = tot + 1;
		tot = tot + 2;
		tot = tot + 3;
		tot = tot + 4;
		tot = tot + 5;
		System.out.println(tot);
		System.out.println("---------------------------------------------");
		
		//************************************************
		// for문을 사용하여 1부터 5까지 더한 결과를 출력하기
		//************************************************
		//<정답1>
		tot = 0;
		for(int i=1; i<6; i++) {
			tot = tot + i;
		}
		System.out.println("정답1 : " + tot);
		System.out.println("---------------------------------------------");
		
		//<정답2>
		tot = 0;
		for(int i=1; ; i++) {
			if(i==6) {
				break;
			}
			tot = tot + i;
		}
		System.out.println("정답2 : " + tot);
		System.out.println("---------------------------------------------");
		
		//************************************************
		// for문을 사용하여 1부터 5까지 홀수만 골라 더한 결과를 출력하기
		//************************************************
		//<정답1>
		tot = 0;
		for(int i=1; i<6; i++) {
			if(i % 2 == 1) {
				tot = tot + i;
			}
		}
		System.out.println("정답1 : " + tot);
		System.out.println("---------------------------------------------");
		
		//<정답2>
		tot = 0;
		for(int i=1; i<6; i++) {
			if(i % 2 != 0) {
				tot = tot + i;
			}
		}
		System.out.println("정답2 : " + tot);
		System.out.println("---------------------------------------------");
		
		//<정답3>
		tot = 0;
		for(int i=1; i<6; i = i + 2) {	// for(int i = 1; i < 6; i+=2){
				tot = tot + i;
		}
		System.out.println("정답3 : " + tot);
		System.out.println("---------------------------------------------");
		
		//<정답4>
		tot = 0;
		for(int i=1; i<6; i++) {
			if(i % 2 == 0) {
				// 밑의 식을 실행하지 않고 증감식으로 바로 가라
				continue;
			}
			tot = tot + i;
		}
		System.out.println("정답4 : " + tot);
		System.out.println("---------------------------------------------");
		
		//************************************************
		// for문을 사용하여 1~60까지 더하되 40번대 숫자를 제외하고 더한 결과를 출력하기
		//************************************************
		tot = 0;
		for(int i=1; i<40; i++) {
			tot = tot + i;
		}
		for(int i=50; i<=60; i++) {
			tot = tot + i;
		}
		System.out.println(tot);
		System.out.println("---------------------------------------------");
		
		//<정답1>
		tot = 0;
		for(int i=1; i<61; i++) {
			if(i < 40  || 50 <= i) {
				tot = tot + i;
			}
		}
		System.out.println("정답1 : " + tot);
		System.out.println("---------------------------------------------");
		
		//<정답2>
		tot = 0;
		for(int i=1; i<61; i++) {
			if(!(40 <= i  && i < 50)) {
				tot = tot + i;
			}
		}
		System.out.println("정답2 : " + tot);
		System.out.println("---------------------------------------------");
		
		//<정답3>
		tot = 0;
		for(int i=1; i<61; i++) {
			if(40 <= i  && i < 50) {
			continue;	
			}
			tot = tot + i;
		}
		System.out.println("정답3 : " + tot);
		System.out.println("---------------------------------------------");
		
		//************************************************
		// for문을 사용하여 1부터 5까지 더한 결과를 출력하기
		// 단 1부터 더하지 말고 5부터 더하기
		//************************************************
		tot = 0;
		for(int i=5; i>0; i--) {
			tot = tot + i;
		}
		System.out.println(tot);
		System.out.println("---------------------------------------------");
		
		//************************************************
		// for문을 사용하여 1부터 7까지 곱한 결과를 출력하기
		//************************************************
		tot = 1;
		for(int i=1; i<8; i++) {
			tot = tot * i;
		}
		System.out.println(tot);
		System.out.println("---------------------------------------------");
		
		/*
		 * break
		 * 	switch 구문 또는 반복문(for, while, do ~ while)안에 나와서
		 * 	switch 구문 또는 반복문을 그 자리에서 중단하고 빠져나오게 한다.
		 * 
		 * continue
		 * 	반복문(for, while, do ~ while)안에 나와서
		 * 	그 자리에서 건너뛰어서 for문이라면 증감식으로 간다.
		 * 	while문 또는 do ~ while문 이라면 조건식으로 간다.
		 * 
		 * switch 구문 안에 break가 나올 수 있다. (O)
		 * 
		 * 코딩상으로 if 구문 안에 break가 나올 수 있다.
		 * -> if가 반복문 안에 있을 경우에는 break가 나올 수 있다.
		 * 
		 * for 문에서 조건식이 없으면 무조건 무한루프에 빠진다. (X)
		 * break 문으로 빠져나올 수 있음
		 * 
		 * for 문에서 증감식이 없으면 무조건 무한루프에 빠진다. (X)
		 * 
		 * 
		 * for 문에서 초기설정값이 없으면 무조건 무한루프에 빠진다. (X)
		 * 
		 */
		
		
		//************************************************
		// 구구단 5단을 아래 처럼 출력하기
		//************************************************
		/*
			5 x 1 = 5
			5 x 2 = 10
			5 x 3 = 15
			5 x 4 = 20
			5 x 5 = 25
			5 x 6 = 30
			5 x 7 = 35
			5 x 8 = 40
			5 x 9 = 45
		*/
		System.out.println( "-------------------------------------"  );
		System.out.println( "for문 사용하여 구구단 5단 출력하기. "  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			System.out.println("5 x " + i + " = " + i*5);
		}
		System.out.println("---------------------------------------------");
		
		//<정답2>
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 5단 출력하기."  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			for(int j =1; j <=9; j++) {
				if(j!=5) {
					continue;
				}
				System.out.print(j + " x " + i + " = " + i*j + "	");
			}
			System.out.println();
		}
		System.out.println("---------------------------------------------");
		
		System.out.println( "-------------------------------------"  );
		System.out.println( "for문 사용하여 구구단 6단 출력하기. "  );
		System.out.println( "-------------------------------------"  );
		int no = 5;
		for(int i = 1; i <= 9; i++) {
			System.out.println(no + " x " + i + " = " + i*no);
		}
		System.out.println("---------------------------------------------");
		
		
		//************************************************
		// 반복문을 사용하여 구구단 1단 ~ 9단을 출력하기
		//************************************************
		/*
			1 x 1 = 1	2 x 1 = 2	~	9 x 1 = 9
			1 x 2 = 2	2 x 2 = 4	~	9 x 2 = 18
			1 x 3 = 3	2 x 3 = 6	~	9 x 3 = 27
			1 x 4 = 4	2 x 4 = 8	~	9 x 4 = 36
			1 x 5 = 5	2 x 5 = 10	~	9 x 5 = 45
			1 x 6 = 6	2 x 6 = 12	~	9 x 6 = 54
			1 x 7 = 7	2 x 7 = 14	~	9 x 7 = 63
			1 x 8 = 8	2 x 8 = 16	~	9 x 8 = 72
			1 x 9 = 9	2 x 9 = 18	~	9 x 9 = 81
		*/
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기"  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			for(int j =1; j <=9; j++) {
				System.out.print(j + " x " + i + " = " + i*j + "	");
			}
			System.out.println();
		}
		
		//<정답1>
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기. 단, 5단은 제외하기"  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			for(int j =1; j <=9; j++) {
				if(j!=5) {		// if(j < 5 || j > 5) {
					System.out.print(j + " x " + i + " = " + i*j + "	");
				}
			}
			System.out.println();
		}
		
		//<정답2>
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기. 단, 5단은 제외하기"  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			for(int j =1; j <=9; j++) {
				if(j==5) {
					continue;
				}
				System.out.print(j + " x " + i + " = " + i*j + "	");
			}
			System.out.println();
		}
		
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기. 단, 구구단 결과가 49일 때 까지만 출력하기"  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			for(int j =1; j <= 9; j++) {
				if((i>=8 && j>=7) || j>=8) {
					break;
				}
				System.out.print(j + " x " + i + " = " + i*j + "	");
			}
			System.out.println();
		}
		
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기. 단, 구구단 결과가 49일 때 까지만 출력하기"  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			for(int j =1; j <= 9; j++) {
				if((j>=8 && i>=7) || i>=8) {
					break;
				}
				System.out.print(i + " x " + j + " = " + i*j + "	");
			}
			System.out.println();
		}
		
		//<정답1>
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기. 단, 구구단 결과가 49일 때 까지만 출력하기"  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			int j =1;
			for(; j <= 9; j++) {
				System.out.print(j + " x " + i + " = " + i*j + "	");
				if(i * j == 49) {
					break;
				}
			}
			if(i==7) {
				break;
			}
			System.out.println();
		}
		
		//<정답2>
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기. 단, 구구단 결과가 49일 때 까지만 출력하기"  );
		System.out.println( "-------------------------------------"  );
		for(int i = 1; i <= 9; i++) {
			boolean flag = false;
			for(int j =1; j <= 9; j++) {
				System.out.print(j + " x " + i + " = " + i*j + "	");
				if(i * j == 49) {
					flag = true;
					break;
				}
			}
			if(flag) {
				break;
			}
			System.out.println();
		}
		
		//<정답3>
		System.out.println( "-------------------------------------"  );
		System.out.println( "반복문을 사용하여 구구단 1단 ~ 9단을 출력하기. 단, 구구단 결과가 49일 때 까지만 출력하기"  );
		System.out.println( "-------------------------------------"  );
		zzz:for(int i = 1; i <= 9; i++) {
			for(int j =1; j <= 9; j++) {
				System.out.print(j + " x " + i + " = " + i*j + "	");
				if(i * j == 49) {
					break zzz;
				}
			}
			System.out.println();
		}
		
		
		System.out.println( "-------------------------------------"  );
		System.out.println( "1 ~ 10 까지의 숫자 중에 소수만 골라 출력하시오.");
		System.out.println( "-------------------------------------"  );
		//<정답1>
		for(int i = 1; i <= 10; i++) {
			int cnt = 0;
			for(int j =1; j <= i; j++) {
				if(i%j == 0) {
					cnt ++;
				}
			}
			if(cnt == 2) {
				System.out.println(i);
			}
		}
		System.out.println("---------------------------------------------");
		//<정답2>
		for(int i = 2; i <= 10; i++) {
			int cnt = 0;
			for(int j =2; j < i; j++) {
				if(i%j == 0) {
					cnt++;
				}
			}
			if(cnt == 0) {
				System.out.println(i);
			}
		}
		System.out.println("---------------------------------------------");
		
		//************************************************
		// 1 ~ 100 까지 더한 누적 합이 50미만일 때 까지만 더하고 출력하기
		// 숫자 합이 50 넘어가기 바로 전의 숫자합을 출력하기
		//************************************************
		//<정답1>
		int sum = 0;
		for(int i = 1; i <= 100; i++) {
			sum = sum + i;
			if(sum >= 50) {
				sum = sum - i;
				break;
			}
		}
		System.out.println(sum);
		
		//<정답2>
		sum = 0;
		for(int i = 1; i <= 100; i++) {
			if(sum+i >= 50) {
				break;
			}
			sum = sum + i;
		}
		System.out.println(sum);
		System.out.println("---------------------------------------------");
		
		
		//************************************************
		// while 문 사용하여 1부터 5까지 더한 결과를 출력하기.
		//************************************************
		//<정답1>
		tot = 0;
		int i = 1;
		while(i<=5) {
			tot = tot + i;
			i++;
		}
		System.out.println(tot);
		System.out.println("---------------------------------------------");
		
		//<정답2>
		tot = 0;
		i = 1;
		while(i<=5) {
			tot = tot + i++;
		}
		System.out.println(tot);
		System.out.println("---------------------------------------------");
		
		//************************************************
		// do ~ while 문 사용하여 1부터 5까지 더한 결과를 출력하기.
		//************************************************
		tot = 0;
		i = 1;
		do {
			tot = tot + i;
			i++;
		}while(i <= 5);
		System.out.println(tot);
		System.out.println("---------------------------------------------");
		
		
		
	}

}
