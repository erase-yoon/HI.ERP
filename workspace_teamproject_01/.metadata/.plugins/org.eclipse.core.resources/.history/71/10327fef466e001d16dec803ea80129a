package com.kh.erp.ad.notice;

public interface AdNoticeService {

	// [1개의 게시판 글]을 리턴하는 메소드 선언
	AdNoticeDTO getAdNotice(int b_no, boolean isAdNoticeDetailForm);

	// [1개의 게시판 글]을 입력하고
	// 입력 적용행의 개수를 리턴하는 메소드 선언
	int insertAdNotice(AdNoticeDTO AdNoticeDTO);
	
	// [1개의 게시판 글]을 수정하고
	// 수정 적용행의 개수를 리턴하는 메소드 선언
	int updateAdNotice(AdNoticeDTO AdNoticeDTO);
	
	// [1개의 게시판 글]을 삭제하고
	// 수정 적용행의 개수를 리턴하는 메소드 선언
	int deleteAdNotice(AdNoticeDTO AdNoticeDTO);
	
}
